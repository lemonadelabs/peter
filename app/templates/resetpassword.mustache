<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{product}} | Reset Password</title>
    <link rel="stylesheet" type="text/css" href="css/app.css">
    <link rel="stylesheet" type="text/css" href="bower_components/tooltipster/css/tooltipster.css">
    {{#customCSS}}
      <link rel="stylesheet" type="text/css" href="{{cssPath}}">
    {{/customCSS}}
    <script type="text/javascript" src="bower_components/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="bower_components/blueimp-md5/js/md5.min.js"></script>
    <script type="text/javascript" src="bower_components/SHA-1/sha1.js"></script>
    <script type="text/javascript" src="bower_components/tooltipster/js/jquery.tooltipster.min.js"></script>
    <script type="text/javascript" src="js/main.min.js"></script>
  </head>
  <body>
    <main class="login-main">
      <div class="login-box">
        {{#showLogo}}
          <img src="{{logoPath}}" alt="{{product}}" class="login-logo">
        {{/showLogo}}
        <p class="login-message">Reset your password</p>
        <form id="reset-form">
          <input type="password" name="password1" value="" placeholder="New Password">
          <input type="password" name="password2" value="" placeholder="Verify Password">
          <input id="login" type="submit" value="Reset" name="reset">
        </form>
      </div>
    </main>
  </body>
</html>
